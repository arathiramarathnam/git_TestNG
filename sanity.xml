  		</run>
  </groups>
    <classes>
      		<class name="com.maven.jenkins.TestNG.HomeGroup"/>
    </classes>
  </test> <!-- Test -->
    <test name="Login_Test">
      <groups>
  		<run>
  		<include name="sanity"/>
  		</run>
  </groups>
  	  <classes>
  	  		<class name="com.maven.jenkins.TestNG.LoginGroup"/>
  	  </classes>
  </test> <!-- Test -->   
</suite> <!-- Suite -->
		
		
		
		